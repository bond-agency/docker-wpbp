# Never keep these.
/database/
/wordpress/wp-content/index.php
/wordpress/wp-content/cache/
/wordpress/wp-content/upgrade/
/wordpress/wp-content/uploads/
/wordpress/wp-content/languages/

# We'll keep something from inside these.
/wordpress/wp-content/themes/**
/wordpress/wp-content/plugins/**
/wordpress/wp-content/mu-plugins/**

# My themes.
!/wordpress/wp-content/themes/YOUR_THEME/
!/wordpress/wp-content/themes/YOUR_THEME/**

# My plugins.
!/wordpress/wp-content/mu-plugins/1-acf-pro-loader.php
!/wordpress/wp-content/mu-plugins/1-timber-loader.php
!/wordpress/wp-content/mu-plugins/includes/
!/wordpress/wp-content/mu-plugins/includes/**

# Don't take tests, docs or bin files under vendor directories.
/**/includes/vendor/**/[Tt]est/
/**/includes/vendor/**/[Tt]ests/
!/**/includes/vendor/twig/twig/lib/**/Test/
/**/includes/vendor/**/doc/
/**/includes/vendor/**/docs/
/**/includes/vendor/**/bin/
/**/includes/vendor/**/.*

# Global ignores - no matter what we're not going to take these.
**/node_modules/
[Tt]humbs.db
[Dd]esktop.ini
*.DS_store
.DS_store?
*.bin
**/tmp/
*.tmp
*.bak
*.log
*.[Cc]ache
*.cpr
*.orig
*.php.in
.idea/
**/temp/
._*
.Trashes
.svn
*.codekit
*.codekit-cache
*.scssc
*.scss-cache
*.sass-cache
*.fusebox
*.rst

# Ignore all of the .envs other than the sample
.env*
!.env.sample

# Don't keep docker-compose.yml as it's autogenerated.
docker-compose.yml

# She's a keeper.
!.gitkeep
